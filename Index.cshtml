@model List<IDSCRegistrar.Models.RegistrarRequest>

<h2>Registrar Requests</h2>

<p><a href="/RegistrarRequests/Create" class="btn btn-primary">Create New Request</a></p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Student ID</th>
            <th>Request Type</th>
            <th>Description</th>
            <th>Request Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.StudentName</td>
                <td>@r.StudentID</td>
                <td>@r.RequestType</td>
                <td>@r.Description</td>
                <td>@r.RequestDate.ToShortDateString()</td>
                <td>
                    <a href="/RegistrarRequests/Edit/@r.Id">Edit</a> |
                    <a href="/RegistrarRequests/Delete/@r.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
